{{ define "hero" }}
<div class="max-w-[90%] flex max-md:flex-col items-center">

    <img class="h-[12rem] w-[12rem]" src="/logo.svg" alt="Logo"></img>

    <div class="md:mx-2"></div>

    <div class="flex flex-col justify-center max-md:content-center md:content-start max-md:items-center md:items-start">
        <h1 class="max-lg:text-2xl lg:text-3xl font-bold">{{ .Title }}</h1>
        <!-- See break: https://developer.mozilla.org/en-US/docs/Web/CSS/word-break -->
        <h2 class="max-lg:text-base lg:text-xl" style="word-break: break-word;">
            {{ .Subtitle }}
        </h2>
    </div>

</div>
{{ end }}